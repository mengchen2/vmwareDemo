<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="1" verbose="1" name="SeLion Test"
	skipfailedinvocationcounts="false" junit="false" parallel="tests"
	data-provider-thread-count="1" annotations="JDK">

	<!-- IMPORTANT Use this file as your global TestNG Template XML file for 
		Eclipse when running TestNG tests. See src/test/resources/README.html for 
		further information. -->

	<listeners>
		<!-- Any of your project specific TestNG listeners can be added here -->
	</listeners>

	<!-- KEY CONCEPT Place only your SeLion global configuration settings in 
		this file. -->

	<!-- optional, defaults to *firefox -->
	<parameter name="browser" value="*firefox" />
	<parameter name="firefoxProfile" value="default"></parameter>
	<parameter name="useLocalRC" value="false"></parameter>

	<parameter name="executionTimeout" value="300000"></parameter>

	<!-- optional, defaults to false. This can also be specified via the JVM 
		argument -DSELION_SELENIUM_RUN_LOCALLY=true -->
	<parameter name="runLocally" value="true" />
	<parameter name="seleniumhost" value="localhost"></parameter>
	<!-- <parameter name="customCapabilities" value="com.symbio.test.LanguageCapabilitiesBuilder"></parameter> -->
	<test name="vmwareDemoTest">
		<groups>
			<run>
				<include name="P0"></include>
			</run>
		</groups>
		<packages>
			<package name="com.symbio.vmware.learner"></package>
		</packages>
	</test>
</suite>

